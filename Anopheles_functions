  male_head_2 = male_head_2_table$Freq,
  male_head_3 = male_head_3_table$Freq,
  female_head_1 = female_head_1_table$Freq,
  female_head_2 = female_head_2_table$Freq,
  female_head_3 = female_head_3_table$Freq,
