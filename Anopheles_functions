###############miRNA 20

library("viridis")           

align_distribution_plot = function(not_aligned,
                                   aligned_lncRNA,
                                   gg_title){
  initial = read.table(not_aligned)
  if (nrow(initial) == 19){
    if (identical(initial$V2, c(16:34))){
      initial_upd = initial
    }
    else{
      print('Really?')
    }}
  else{
    initial_upd = data.frame(V2 = c(16:34),
                             V1 = NA)
    initial_upd$V1 = initial[match(initial_upd$V2, initial$V2),]$V1
    initial_upd$V1 = ifelse(is.na(initial_upd$V1), 0, initial_upd$V1)
  }
  

  lRNA = read.table(aligned_lncRNA)
  if (nrow(lRNA) == 19){
    if (identical(lRNA$V2, c(16:34))){
      lRNA_upd = lRNA
    }
    else{
      print('Really?')
    }}
  else{
    lRNA_upd = data.frame(V2 = c(16:34),
                           V1 = NA)
    lRNA_upd$V1 = lRNA[match(lRNA_upd$V2, lRNA$V2),]$V1
    lRNA_upd$V1 = ifelse(is.na(lRNA_upd$V1), 0, lRNA_upd$V1)
  }
  
  df = data.frame(length = rep(initial_upd$V2, 2), 
                  count = c(lRNA_upd$V1, initial_upd$V1),
                  alignment = c(rep('lncRNAs', 19), rep('Not', 19)))
  
#  normalization_coeff = sum(initial_upd$V2)
#  df$count = df$count * 1000000/ normalization_coeff
  
  plot = ggplot(data = df, aes(x = length, y = count, fill = alignment)) + 
    geom_bar(stat = "identity") + 
    theme_classic() +
    xlab('miRNA length') + 
    ylab('Count, reads') + 
    ggtitle(gg_title) + 
    theme(text = element_text(size = 15), legend.position = "none") +
    scale_x_continuous(breaks = c(16, 18, 20, 22, 24, 26, 28, 30, 32, 34)) + 
    labs(fill = 'Alignment:') +
    scale_fill_manual(values = c('lncRNAs' = "tomato", 
                                 'Not' = "lightsteelblue1"))
  return(plot)
}

align_distribution_plot_legend = function(not_aligned,
                                          aligned_lncRNA,
                                          gg_title){
  initial = read.table(not_aligned)
  if (nrow(initial) == 19){
    if (identical(initial$V2, c(16:34))){
      initial_upd = initial
    }
    else{
      print('Really?')
    }}
  else{
    initial_upd = data.frame(V2 = c(16:34),
                             V1 = NA)
    initial_upd$V1 = initial[match(initial_upd$V2, initial$V2),]$V1
    initial_upd$V1 = ifelse(is.na(initial_upd$V1), 0, initial_upd$V1)
  }
  
  
  lRNA = read.table(aligned_lncRNA)
  if (nrow(lRNA) == 19){
    if (identical(lRNA$V2, c(16:34))){
      lRNA_upd = lRNA
    }
    else{
      print('Really?')
    }}
  else{
    lRNA_upd = data.frame(V2 = c(16:34),
                          V1 = NA)
    lRNA_upd$V1 = lRNA[match(lRNA_upd$V2, lRNA$V2),]$V1
    lRNA_upd$V1 = ifelse(is.na(lRNA_upd$V1), 0, lRNA_upd$V1)
  }
  
  df = data.frame(length = rep(initial_upd$V2, 2), 
                  count = c(lRNA_upd$V1, initial_upd$V1),
                  alignment = c(rep('lncRNAs', 19), rep('Not', 19)))
  
#  normalization_coeff = sum(initial_upd$V2)
#  df$count = df$count * 1000000/ normalization_coeff
  
  plot = ggplot(data = df, aes(x = length, y = count, fill = alignment)) + 
    geom_bar(stat = "identity") + 
    theme_classic() +
    xlab('miRNA length') + 
    ylab('Count, reads') + 
    ggtitle(gg_title) + 
    theme(text = element_text(size = 15), legend.position = "top", legend.direction="vertical") +
    scale_x_continuous(breaks = c(16, 18, 20, 22, 24, 26, 28, 30, 32, 34)) + 
    labs(fill = 'Alignment:') +
    scale_fill_manual(values = c('lncRNAs' = "tomato", 
                                 'Not' = "lightsteelblue1"))
  return(plot)
}



extract_legend <- function(my_ggp) {
  step1 <- ggplot_gtable(ggplot_build(my_ggp))
  step2 <- which(sapply(step1$grobs, function(x) x$name) == "guide-box")
  step3 <- step1$grobs[[step2]]
  return(step3)
}


