  #
  
  coverage = plotcoverage_upd(TE_names[i],'~/Anopheles_part3/TE_Josefa/TE_library_josefa.fasta',
                              '/mnt/raid/pro_milka/Anopheles_part3/COMPARE_ME/align_to_TE_V0/F4_flag/female_head_rep3_trimmed.fastq.sam.flagf4.bam.fasta.sam.f4.bam.fasta.sam.f4.bam.fasta.sam.flagF4.bam')
  signature = plot_signature(TE_names[i], '~/Anopheles_part3/TE_Josefa/TE_library_josefa.fasta',
                             '~/Anopheles_part3/COMPARE_ME/align_to_TE_V0/F4_flag/female_head_rep3_trimmed.fastq.sam.flagf4.bam.fasta.sam.f4.bam.fasta.sam.f4.bam.fasta.sam.flagF4.bam.fasta')
  bias = plot_bias(TE_names[i], 
                   '/mnt/raid/pro_milka/Anopheles_part3/COMPARE_ME/align_to_TE_V0/F4_flag/female_head_rep3_trimmed.fastq.sam.flagf4.bam.fasta.sam.f4.bam.fasta.sam.f4.bam.fasta.sam.flagF4.bam')
  
